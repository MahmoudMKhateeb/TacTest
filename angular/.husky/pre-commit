#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Run lint-staged for Angular
cd angular || { echo "‚ùå Failed to change to 'angular' directory. Aborting."; exit 1; }
npx lint-staged -v -d -r || { echo "‚ùå lint-staged failed. Aborting commit."; exit 1; }
cd .. || { echo "‚ùå Failed to return to root directory. Aborting."; exit 1; }

# Find and format staged .cs files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.cs$' || true)

if [ -z "$STAGED_FILES" ]; then
  echo "‚ö†Ô∏è No staged C# files found. Skipping formatting."
  exit 0
fi

for FILE in $STAGED_FILES; do
  dotnet csharpier "$FILE" || { echo "‚ùå Failed to format: $FILE. Aborting commit."; exit 1; }
  git add "$FILE"
done

echo "üéâ Pre-commit checks passed. All files are formatted!"
exit 0
